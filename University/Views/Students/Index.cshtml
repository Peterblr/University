@model IEnumerable<University.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid bg-secondary text-light text-center p-5">
    <div class="container bg-secondary bg-gradient p-5">
        <h1 class="display-1">Students</h1>
        <hr>
        <div class="d-grid gap-2">
            <a class="btn btn-outline-info bg-gradient" asp-action="Create">Create New</a>
        </div>
        <hr>
        <form asp-action="Index" method="get">
            <div class="form-actions no-color">
                <p>
                    Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                    <button type="submit" class="btn btn-outline-secondary bg-gradient text-dark"><i class="bi bi-search text-dark"></i></button>
                    <a class="btn btn-outline-secondary bg-gradient text-dark" asp-action="Index"><i class="bi bi-arrow-clockwise"></i>&ensp;Back to Full List</a>
                </p>
            </div>
        </form>
    </div>
</div>

<div class="container-fluid bg-secondary text-light text-center p-5">
    <div class="container bg-secondary bg-gradient p-5">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        <a class="text-decoration-none" asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.LastName)</a>
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstMidName)
                    </th>
                    <th>
                        <a class="text-decoration-none" asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.EnrollmentDate)</a>
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstMidName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EnrollmentDate)
                        </td>
                        <td>
                            <a class="btn btn-outline-secondary bg-gradient text-dark" asp-action="Edit" asp-route-id="@item.ID"><i class="bi bi-pencil-square"></i>&ensp;Edit</a>
                            <a class="btn btn-outline-secondary bg-gradient text-dark" asp-action="Details" asp-route-id="@item.ID"><i class="bi bi-eye"></i>&ensp;Details</a>
                            <a class="btn btn-outline-secondary bg-gradient text-dark" asp-action="Delete" asp-route-id="@item.ID"><i class="bi bi-trash"></i>&ensp;Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>