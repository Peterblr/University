@model University.Models.Course

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid bg-secondary text-light text-center p-5">
    <div class="container bg-secondary bg-gradient p-5">
        <h1 class="display-1">Create New</h1>
        <h1 class="display-4">Course</h1>
        <hr>
        <div class="d-grid gap-2">
            <a class="btn btn-outline-info bg-gradient" asp-action="Index">Back to List</a>
        </div>
        <hr>
    </div>
</div>

<div class="container-fluid bg-secondary text-light p-5">
    <div class="container bg-secondary bg-gradient p-5">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CourseID" />
                    <div class="form-group">
                        <label asp-for="CourseID" class="control-label p-1"></label>
                        <input asp-for="CourseID" class="form-control" />
                        <span asp-validation-for="CourseID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label p-1"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Credits" class="control-label p-1"></label>
                        <input asp-for="Credits" class="form-control" />
                        <span asp-validation-for="Credits" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DepartmentID" class="control-label p-1"></label>
                        <select asp-for="DepartmentID" class="form-control" asp-items="ViewBag.DepartmentID"></select>
                    </div>
                    <div class="form-group d-grid gap-2 pt-4">
                        <input type="submit" value="Create" class="btn btn-outline-info bg-gradient" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
